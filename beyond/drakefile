import drake
import drake.debian
import drake.docker
import drake.license_file
import drake.templating

from itertools import chain
import functools

build = None
rule_check = None
install = None
tests = None
package = None

gcs_login = '798530033299-s9b7qmrc99trk8uid53giuvus1o74cif' \
            '@developer.gserviceaccount.com'
gcs_key = '''-----BEGIN PRIVATE KEY-----
